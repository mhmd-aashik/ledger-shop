// User Model - Authentication and basic user data
model User {
  id        String   @id @default(cuid())
  clerkId   String   @unique
  email     String   @unique
  firstName String?
  lastName  String?
  imageUrl  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  profile   Profile?
  favorites Favorite[]
  orders    Order[]
  addresses Address[]
  reviews   Review[]
  wishlists Wishlist[]
  recentlyViewed RecentlyViewed[]

  @@map("users")
}
